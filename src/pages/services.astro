---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ServiceSection from "../components/Services.astro";
---

<Layout
    title="Pest Control Services Singapore - Elite Pest Management"
    description="Professional pest management solutions: termite inspections, soil treatment, mosquito control, and more. Effective, safe, and expert-led services in Singapore."
>
    <Header />
    <main class="pt-10">
        <ServiceSection />

        <!-- Process Section -->
        <section class="py-20 bg-white">
            <div class="container-custom">
                <h2 class="section-title">How We Work</h2>
                <div
                    class="flex flex-col md:flex-row justify-between items-center mt-12 gap-8 relative"
                >
                    <!-- Connecting Line (Desktop) -->
                    <div
                        class="hidden md:block absolute top-1/2 left-0 w-full h-1 bg-gray-200 -z-10 transform -translate-y-1/2"
                    >
                    </div>

                    <div
                        class="bg-white p-6 rounded-lg border-2 border-[var(--color-primary)] w-full md:w-1/3 text-center relative"
                    >
                        <div
                            class="w-10 h-10 bg-[var(--color-primary)] text-white rounded-full flex items-center justify-center absolute -top-5 left-1/2 transform -translate-x-1/2 font-bold"
                        >
                            1
                        </div>
                        <h3 class="text-xl font-bold mt-4 mb-2">Inspection</h3>
                        <p class="text-gray-600">
                            Thorough site assessment to identify pest variations
                            and infestation levels.
                        </p>
                    </div>
                    <div
                        class="bg-white p-6 rounded-lg border-2 border-[var(--color-secondary)] w-full md:w-1/3 text-center relative"
                    >
                        <div
                            class="w-10 h-10 bg-[var(--color-secondary)] text-white rounded-full flex items-center justify-center absolute -top-5 left-1/2 transform -translate-x-1/2 font-bold"
                        >
                            2
                        </div>
                        <h3 class="text-xl font-bold mt-4 mb-2">Treatment</h3>
                        <p class="text-gray-600">
                            Application of targeted, safe, and effective control
                            measures.
                        </p>
                    </div>
                    <div
                        class="bg-white p-6 rounded-lg border-2 border-[var(--color-primary)] w-full md:w-1/3 text-center relative"
                    >
                        <div
                            class="w-10 h-10 bg-[var(--color-primary)] text-white rounded-full flex items-center justify-center absolute -top-5 left-1/2 transform -translate-x-1/2 font-bold"
                        >
                            3
                        </div>
                        <h3 class="text-xl font-bold mt-4 mb-2">Monitoring</h3>
                        <p class="text-gray-600">
                            Follow-up inspections to ensure the problem is fully
                            resolved and prevent recurrence.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>
