---
import { Image } from "astro:assets";
import termiteImg from "../assets/images/termite-inspection.jpg";
import mosquitoImg from "../assets/images/mosquitoes-inspection.png";
import cockroachImg from "../assets/images/cockroach-treatment.png";

const services = [
    {
        title: "Termite Inspections",
        description:
            "Utilizing Termatrac technology a breakthrough in termite detection using radar-like sensors for accurate, non-destructive results.",
        image: termiteImg,
    },
    {
        title: "Mosquito Management",
        description:
            "Comprehensive protection against mosquito-borne diseases like Dengue and Malaria through expert inspection and targeted treatment.",
        image: mosquitoImg,
    },
    {
        title: "Cockroach Treatment",
        description:
            "Eliminating infestations and common allergens that trigger asthma, ensuring a safe and hygienic environment for your premises.",
        image: cockroachImg,
    },
];
---

<section class="py-20 bg-gray-50">
    <div class="container-custom">
        <div class="text-center mb-16">
            <h2 class="section-title">Our Expertise</h2>
            <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">
                We provide a wide range of pest control services. Here are our
                most popular solutions.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                services.map((service) => (
                    <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border-t-4 border-[var(--color-primary)]">
                        <div class="relative h-48">
                            <Image
                                src={service.image}
                                alt={service.title}
                                class="w-full h-full object-cover"
                                loading="lazy"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent" />
                        </div>
                        <div class="p-8">
                            <h3 class="text-xl font-bold text-[var(--color-primary)] mb-3">
                                {service.title}
                            </h3>
                            <p class="text-gray-600 leading-relaxed mb-4">
                                {service.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="mt-12 text-center">
            <a href="/services" class="btn-primary"> View All Services </a>
        </div>
    </div>
</section>
