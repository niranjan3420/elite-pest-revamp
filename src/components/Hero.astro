---
import { Image } from "astro:assets";
import heroBg from "../assets/hero-bg.png";
---

<section
    class="relative bg-gray-900 text-white overflow-hidden h-[600px] flex items-center"
>
    <!-- Background Image Overlay -->
    <div class="absolute inset-0 z-0">
        <Image
            src={heroBg}
            alt="Clean modern living room"
            widths={[400, 800, 1200, 1600, heroBg.width]}
            sizes="100vw"
            class="w-full h-full object-cover opacity-60"
            loading="eager"
            fetchpriority="high"
        />
        <div
            class="absolute inset-0 bg-gradient-to-r from-[var(--color-primary)]/90 to-transparent"
        >
        </div>
    </div>

    <!-- Content -->
    <div
        class="container-custom relative z-10 grid grid-cols-1 md:grid-cols-2 gap-8 items-center"
    >
        <div class="space-y-6 animate-fade-in-up">
            <h1
                class="text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight"
            >
                Protecting Your <br />
                <span class="text-[var(--color-secondary)]"
                    >Home & Business</span
                >
            </h1>
            <p class="text-lg md:text-xl text-gray-100 max-w-lg">
                Professional, safe, and effective pest management solutions for
                peace of mind. Experience the Elite difference today.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <a href="/contact" class="btn-secondary"> Get a Free Quote </a>
                <a
                    href="/services"
                    class="inline-flex items-center justify-center px-6 py-3 border-2 border-white text-base font-medium rounded-md text-white hover:bg-white hover:text-[var(--color-primary)] transition-colors duration-200 cursor-pointer"
                >
                    Our Services
                </a>
            </div>
        </div>
    </div>

    <!-- Decorative geometric shape -->
    <div class="absolute bottom-0 right-0 z-10 hidden lg:block">
        <svg
            width="400"
            height="400"
            viewBox="0 0 400 400"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                d="M400 400V0C400 220.914 220.914 400 0 400H400Z"
                fill="var(--color-secondary)"
                fill-opacity="0.1"></path>
        </svg>
    </div>
</section>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.8s ease-out forwards;
    }
</style>
